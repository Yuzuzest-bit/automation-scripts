// まず全体の既定フラグ（^ を効かせるため m は必須）
"highlight.regexFlags": "gim",

"highlight.regexes": {
  // H1: "# "
  "(^#\\s)(.*$)": {
    "filterLanguageRegex": "markdown",
    "decorations": [
      { "color": "#ff6b6b", "fontWeight": "bold" },  // "# " 側
      { "color": "#ff6b6b", "fontWeight": "bold" }   // タイトル側
    ]
  },

  // H2: "## "
  "(^##\\s)(.*$)": {
    "filterLanguageRegex": "markdown",
    "decorations": [
      { "color": "#ffd93d", "fontWeight": "bold" },
      { "color": "#ffd93d", "fontWeight": "bold" }
    ]
  },

  // H3: "### "
  "(^###\\s)(.*$)": {
    "filterLanguageRegex": "markdown",
    "decorations": [
      { "color": "#6bcb77", "fontWeight": "bold" },
      { "color": "#6bcb77", "fontWeight": "bold" }
    ]
  }
}
